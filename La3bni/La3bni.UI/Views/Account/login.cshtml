@model Models.LogIN
@{
    ViewBag.Title = "Login";
}
<div class="login-box">
    <h2>Login</h2>

    <div class="row">
        <div class="col-md-4">
            <form asp-action="Login" enctype="multipart/form-data">
                <div class="user-box">
                    <div class="form-group">


                        <input asp-for="Email" />
                        <label> Email or Username</label>
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>
                </div>
                <div class="user-box">
                    <div class="form-group">
                        <input asp-for="Password" />
                        <label>Password</label>


                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>
                </div>
               
                <div class="user-box">

                    <input type="checkbox" id="remeber" name="rememberMe" value="true">
                    <label for="remeber"> Remember Me</label><br>

                </div>

                <div class="Linky">
                    <span></span>
                    <span></span>
                    <span></span>
                    <span></span>

                    <input type="submit" value="Login" id="submitt" />

                </div>


            </form>
        </div>
    </div>
</div>
