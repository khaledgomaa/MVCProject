@model Models.EditRole

@{
    ViewBag.Title = "Edit Role";

}

<h2> Edit Role  </h2>

<form method="post">
    <div asp-validation-summary="All" class="text-danger"></div>
    <div>
        <label asp-for="Id"></label>
        <div>
            <input asp-for="Id" disabled />
        </div>
    </div>

    <div class="form-group">
        <label asp-for="RoleName" class="control-label"></label>
        <input asp-for="RoleName" class="form-control" />
        <span asp-validation-for="RoleName" class="text-danger"></span>
    </div>

    <div class="form-group">
        <input type="submit" value="Update" class="btn btn-primary" />
        <a asp-action="ListRoles"> Cancel </a>
    </div>
</form>

<div style="border:5px solid black">

    <div> Users in this Role </div>

    @if (Model.Users.Any())
    {
        foreach (var user in Model.Users)
        {
            <h5> @user </h5>
        }
    }
    else
    {
        <h5> None at the moment </h5>
    }
    <a asp-action="EditUsersInRole" asp-controller="Administration"
       asp-route-roleId="@Model.Id"> Add or Remove Users </a>
</div>